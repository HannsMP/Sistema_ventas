  <!---------------------- BODY ---------------------->

  <div class="content-tittle">Compras</div>
  <div class="content-path">
    <a href="/control">/control</a>
    <a href="/control/movimientos">/movimientos</a>
    <a href="/control/movimientos/ventas">/Compras</a>
  </div>
</div>

<div class="content-body">
  <div class="menu-body">
    <div class="card" <% if(!session.permiso.agregar){ %> style="display: none" <% } %>>
      <div class="card-head">
        <h3 class="card-tittle">Reporte de Compras</h3>
        <a class="btn btn-danger" id="clear">Limpiar</a>
      </div>
      <div class="card-body">
        <div class="card-form">
          <div class="form-box">
            <form>
              <div class="form-body">
                <div class="form-col">
                  <div class="input-box">
                    <input id="selector-metodo-pago" class="selector" type="search" placeholder="Buscar tipo pago...">
                    <label for="Transaccion">Transaccion:</label>
                  </div>
                  <div class="input-box">
                    <input id="importe-igv" name="igv" type="text" disabled>
                    <label for="igv">IGV:</label>
                  </div>
                </div>
                <div class="form-col">
                  <div class="input-box">
                    <input id="selector-proveedores" class="selector" type="search" placeholder="Buscar proveedor...">
                    <label for="cliente">Proveedor:</label>
                  </div>
                  <div class="input-box">
                    <input id="numero-serie" name="serie" type="text" oninput="inputCapitalize(this, 20)" required>
                    <label for="serie">Numero de Serie (20):</label>
                  </div>
                </div>
              </div>
              <table id="table-main">
                <thead>
                  <tr>
                    <th>Producto</th>
                    <th>Precio Venta</th>
                    <th>Cantidad</th>
                    <th>Precio Compra</th>
                    <th>Total Compra</th>
                  </tr>
                </thead>
              </table>
              <div class="form-foot">
                <a id="add-row" class="btn btn-info" style="width: 100%;">
                  <i class="bx bx-plus-circle"></i>
                </a>
              </div>
              <div class="form-foot">
                <div class="f-row">
                  <div class="input-box">
                    <input id="importe-total" name="venta" type="text" value="0" style="text-align: center;" required disabled>
                    <label for="venta">Importe Total:</label>
                  </div>
                </div>
                <a id="save" class="btn btn-success">guardar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="card" id="card-table-main">
      <div class="card-head">
        <h3 class="card-tittle">Ventas de hoy</h3>
      </div>
      <div class="card-body">
        <div class="table-box">
          <table id="table-historial" style="width: auto;">
            <thead>
              <tr>
                <th>Codigo</th>
                <th>Proveedor</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>hora</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/src/private/routes/movimientos/compras/index.js"></script>