    <div class="card">
      <div class="card-head">
        <h3 class="card-tittle">Control de colores</h3>
      </div>
      <div class="card-body">
        <div class="card-form">
          <div class="form-box">
            <form>
              <style>
                input[type=color]~label {
                  color: rgb(var(--color-8)) !important;
                  top: 2px !important;
                }

                /* Estilo base para el input de color */
                input[type="color"] {
                  -webkit-appearance: none;
                  -moz-appearance: none;
                  appearance: none;
                  overflow: hidden;
                  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
                  transition: box-shadow 0.3s ease, transform 0.3s ease;
                  display: inline-flex;
                  vertical-align: bottom;
                  border: none;
                  border-radius: 2px;
                  padding: 0;
                  height: 40px;
                  width: 100%;
                  cursor: pointer;
                  z-index: 1;
                }

                input[type="color"]::-webkit-color-swatch-wrapper {
                  padding: 0;
                }

                input[type="color"]::-webkit-color-swatch {
                  border: 0;
                  border-radius: 2px 2px 0 0;
                }

                input[type="color"]::-moz-color-swatch {
                  border: 0;
                  border-radius: 2px 2px 0 0;
                }

                .pantone-card {
                  background: #fff;
                  display: grid;
                  width: 100%;
                  border-radius: 10px;
                  box-shadow: 0 2px 4px #0001;
                  border: 4px solid #fff;
                }

                output {
                  display: block;
                  background: #fff;
                  color: black !important;
                  font-size: 28px;
                  padding: 16px;
                  line-height: 1em;
                  font-family: 'helvetica', sans-serif;

                  &:before {
                    content: 'HEXADECIMAL';
                    font-size: 14px;
                    font-weight: bold;
                    display: block;
                  }
                }
              </style>
              <div class="form-body">
                <div class="form-col">
                  <div class="pantone-card">
                    <input type="color" id="--primary">
                    <output>--primary</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--secundary">
                    <output>--secundary</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--state-1">
                    <output>--state-1</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--state-2">
                    <output>--state-2</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--state-3">
                    <output>--state-3</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--state-4">
                    <output>--state-4</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--color-0">
                    <output>--color-0</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--color-1">
                    <output>--color-1</output>
                  </div>
                </div>
                <div class="form-col">
                  <div class="pantone-card">
                    <input type="color" id="--color-2">
                    <output>--color-2</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--color-3">
                    <output>--color-3</output>
                  </div>
                  <div class="pantone-card">
                    <input type="color" id="--color-4">
