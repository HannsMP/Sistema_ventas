<div class="content-body">
  <div class="menu-body">
    <div class="cards">
      <% if(userLayout['/control/mantenimiento/categorias']?.ver){ %>
      <div class="f-col">
        <div class="card">
          <div class="card-head">
            <h3 class="card-tittle">Categorias</h3>
            <form action="/control/mantenimiento/categorias" method="get">
              <input class="card-search" type="search" name="tb_search" placeholder="Buscar Categoria">
            </form>
          </div>
          <a class="card-data" href="/control/mantenimiento/categorias">
            <div class="card-icon">
              <i class="bx bx-hive"></i>
            </div>
            <div class="card-col">
              <div class="data-box" id="categorias-cantidad">
                <span class="data-tittle">Cantidad:</span>
                <small class="data"></small>
              </div>
              <div class="data-box" id="categorias-fecha">
                <span class="data-tittle">Ultima Insersion:</span>
                <small class="data"></small>
                <small class="data"></small>
              </div>
            </div>
          </a>
        </div>
        <div class="card">
          <div class="card-head">
            <h3 class="card-tittle">Grafico Cantidad Categorias</h3>
          </div>
          <div class="card-data">
            <canvas id="chart-categorias"></canvas>
          </div>
        </div>
      </div>
      <script src="/src/private/routes/mantenimiento/dash/categoria.js"></script>
      <% } %>

